@page
@model BannedBooks.Pages.IndexModel
@{
    ViewData["Title"] = "Banned Books";
}

<h1 class="display-4">Banned Books</h1>

<!-- Search Bar -->
<form method="get" class="form-inline justify-content-center mt-4">
    <input type="text"
           name="SearchTerm"
           class="form-control"
           placeholder="Search by title or author..."
           value="@Model.SearchTerm" />
    <button type="submit" class="btn btn-primary ml-2">Search</button>
</form>

<!-- Books List -->
@if (Model.Book != null && Model.Book.Any())
{
    <table class="table mt-4">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>State</th>
                <th>District</th>
                <th>Reason</th>
                <th>Date of Ban</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Book)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.State</td>
                    <td>@book.District</td>
                    <td>@book.Reason</td>
                    <td>@(book.DateOfBan?.ToString("MM/dd/yyyy") ?? "N/A")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="mt-4">No books found.</p>
}
